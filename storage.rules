rules_version = '2';

// Firebase Storage Security Rules pour ChurchFlow
service firebase.storage {
  match /b/{bucket}/o {
    
    // Règles pour les images de profil utilisateur
    match /profiles/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les images des composants de pages
    match /page_components/images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles pour les images des groupes
    match /groups/{groupId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Règles pour les images des événements
    match /events/{eventId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Règles pour les images des blogs
    match /blog/{postId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Règles pour les fichiers uploadés par les utilisateurs
    match /user_uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Règles générales - accès par défaut refusé
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}